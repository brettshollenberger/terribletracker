<table class="table table-hover">
  <thead>
    <th>Title</th>
    <th>User Story</th>
    <th>Estimate</th>
    <th>Complexity</th>
    <th>Status</th>
    <th>Delete</th>
  </thead>
  <tbody>
    <% @user_stories.each do |story| %>
      <tr>
        <td><%= link_to "#{story.title}", edit_project_user_story_path(@project, story) %></td>
        <td><%= story.story %></td>
        <td><%= story.estimated %></td>
        <td><%= story.complexity %></td>
        <td><%= story.assign_button %></td>
        <td><%= story.state_button %></td>
        <td><%= link_to "Delete", project_user_story_path(@project, story), method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>
