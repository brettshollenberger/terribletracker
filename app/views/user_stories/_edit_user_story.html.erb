<%= link_to "x", "#", :id => "close" %><h2 class="right-sidebar">Edit</h2>
<%= form_for [@project, @user_story], remote: true, :html => { :class => "terrible_story_bro", :id => "edit_story_form" } do |f| %>

  <%= f.text_field :title, :placeholder => "Title", autofocus: true %>
  <br>
  <%= f.text_area :story, :placeholder => "User story hipster ipsum yolo sit amet", :class => "description" %>
  <br>
  <%= f.text_field :estimate_in_quarter_days, :placeholder => "Estimate in quarter days" %>
  <br>
  <%= f.text_field :complexity, :placeholder => "Complexity" %>
  <br>
  <%= f.submit("Edit Story", :class => "btn btn-success new-project-btn") %>

<% end %>

<script>
$('#close').click(function() {
  $('#right-sidebar').hide('normal', function() {
    $('#body-main').switchClass('span6', 'span9');
  });
});
</script>
