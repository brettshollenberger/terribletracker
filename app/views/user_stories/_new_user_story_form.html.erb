<%= form_for [@project, @user_story], remote: true, :html => { :class => "terrible_story_bro", :id => "new_story_form" } do |f| %>

  <%= f.text_field :title, :placeholder => "Title" %>
  <br>
  <%= f.text_area :story, :placeholder => "User story hipster ipsum yolo sit amet" %>
  <br>
  <%= f.text_field :estimate_in_quarter_days, :placeholder => "Estimate in quarter days" %>
  <br>
  <%= f.text_field :complexity, :placeholder => "Complexity" %>
  <br>
  <%= f.submit("Create Story", :class => "btn btn-success new-project-btn") %>

<% end %>
