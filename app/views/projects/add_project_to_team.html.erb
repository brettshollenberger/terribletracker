<div class="container signin">
  <div class="row">
    <div class="span12">
      <div class="terrible_form">
        <h2>Add Project to Team</h2>
        <%= form_for @project, url: { :action => "save_team_project_join" } do |f| %>

          <%= f.hidden_field :project_id, value: @project.id %>
          <%= f.text_field :team, :placeholder => "Team Name" %>
          <br>
          <%= f.submit("Add to Team", :class => "btn btn-success new-project-btn") %>

        <% end %>
      </div>

    </div>
  </div>
</div>
