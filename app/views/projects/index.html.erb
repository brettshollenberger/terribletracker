<div class="container">
  <div class="row">
    <div class="span12">
      <% if notice %>
        <div class="notice"><%= notice %></div>
      <% end %>
      <% if @projects.empty? %>
        <h2>Welcome <%= current_user.first_name %>!</h2>
        <p>Terrible Tracker helps you keep track of your projects. Get started by adding your first project</p>
      <% else %>
        <h2><%= current_user.first_name %>'s Projects</h2>
        <table class="table table-hover">
          <thead>
            <th>Title</th>
          </thead>
          <tbody>
            <% @projects.each do |project| %>
              <tr>
                <td><%= link_to "#{project.title}", project_path(project), :class => "project-list" %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      <% end %>
        <%= link_to "Create Project", new_project_path, :class => "btn btn-primary" %>
    </div>
  </div>
</div>
