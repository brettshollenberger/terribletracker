<div class="container">
  <div class="row">
    <div class="span12">
      <% if notice %>
        <div class="notice"><%= notice %></div>
      <% end %>
      <h2><%= current_user.first_name %>'s Projects</h2>
      <table class="table table-hover">
        <thead>
          <th>Title</th>
        </thead>
        <tbody>
          <% @projects.each do |project| %>
            <tr>
              <td><%= link_to "#{project.title}", project_path(project), :class => "project-list" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
