<div class="container">
  <div class="row">
    <div class="span12">
      <% if notice %>
        <div class="notice"><%= notice %></div>
      <% end %>
      <div class="invitations">
        <h2>Invitations</h2>
        <table class="table table-hover">
          <thead>
            <th>Project</th>
            <th>Owner</th>
            <th>Invited by</th>
            <th>Actions</th>
          </thead>
          <tbody>
            <% @invitations.each do |invitation| %>
              <tr>
                <td><%= invitation.project.title %></td>
                <td><%= "#{invitation.project.owner.first_name} #{invitation.project.owner.last_name}" %></td>
                <td><%= "#{invitation.inviter.first_name} #{invitation.inviter.last_name}" %></td>
                <td><%= invitation.actions_dropdown %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <% if @projects.empty? %>
        <%= render 'welcome_page' %>
      <% else %>
        <%= render 'projects_page' %>
      <% end %>
      <%= link_to "Create Project", new_project_path, :class => "btn btn-primary" %>
    </div>
  </div>
</div>
