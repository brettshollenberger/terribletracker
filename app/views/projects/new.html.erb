<div class="container signin">
  <div class="row">
    <div class="span12">
      <div class="terrible_form">
        <h2>Let's Do Stuff.</h2>
        <%= form_for @project do |f| %>

          <%= f.text_field :title, :placeholder => "Project Name" %>
          <br>
          <%= f.text_area :description, :placeholder => "Description hipster ipsum yolo sit amet" %>
          <br>
          <%= f.text_field :budget, :placeholder => "Budget" %>
          <br>
          <%= f.text_field :weekly_rate, :placeholder => "Weekly Rate" %>
          <br>
          <%= f.submit("Create Project", :class => "btn btn-success new-project-btn") %>

        <% end %>
      </div>

    </div>
  </div>
</div>
