<div class="container">
  <div class="row">
    <div class="span12">
      <% if notice %>
        <div class="notice"><%= notice %></div>
      <% end %>
        <% unless current_user.project_invitations.empty? %>
          <%= render '/projects/invitations' %>
        <% end %>
        <% unless current_user.team_invitations.empty? %>
          <%= render '/projects/team_invitations' %>
        <% end %>
        <% if current_user.active_projects.empty? %>
          <%= render '/projects/welcome_page' %>
        <% else %>
          <%= render '/activities/index' %>
        <% end %>
        <%= link_to "Create Team", new_team_path, :class => "btn btn-primary homepage-btn", remote: true %>

    </div>
  </div>
</div>
